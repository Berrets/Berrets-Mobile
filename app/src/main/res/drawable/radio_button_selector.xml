<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <size android:width="20dp" android:height="20dp"/>
                    <solid android:color="@color/primary400"/>
                </shape>
            </item>
            <item android:top="1.5dp" android:right="1.5dp" android:bottom="1.5dp" android:left="1.5dp">
                <shape android:shape="oval">
                    <stroke android:width="2dp" android:color="@color/primary100"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_checked="false">
        <shape android:shape="oval">
            <size android:width="20dp" android:height="20dp"/>
            <stroke android:width="2dp" android:color="@color/separator_no_transparency"/>
            <solid android:color="@color/backgroundSecondary"/>
        </shape>
    </item>
</selector>
