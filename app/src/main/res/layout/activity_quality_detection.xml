<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/main"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/backgroundSecondary"
	tools:context=".view.qualityDetection.QualityDetectionActivity">

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:scrollbarSize="0dp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent">

		<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<ImageView
				android:id="@+id/hero_quality_detection"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:adjustViewBounds="true"
				android:contentDescription="@string/alt_hero_quality_detection"
				android:scaleType="fitCenter"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent"
				app:srcCompat="@drawable/hero_quality_detection" />

			<!-- Navbar -->
			<LinearLayout
				android:id="@+id/navbar"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:gravity="center"
				android:paddingVertical="14dp"
				android:paddingHorizontal="9dp"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent">

				<ImageButton
					android:id="@+id/btn_back"
					android:layout_width="38dp"
					android:layout_height="38dp"
					android:padding="7dp"
					android:src="@drawable/ic_x"
					android:background="@drawable/shape_circle"
					android:backgroundTint="@color/bg_button_opacity"
					app:tint="@color/white"
					android:layout_marginEnd="10dp"/>

				<View
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:textColor="@color/textPrimary"
					android:layout_marginEnd="16dp" />

				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:gravity="end">

					<ImageButton
						android:id="@+id/btn_share"
						android:layout_width="38dp"
						android:layout_height="38dp"
						android:padding="7dp"
						android:src="@drawable/ic_clock_counter_clockwise"
						android:background="@drawable/shape_circle"
						android:backgroundTint="@color/bg_button_opacity"
						app:tint="@color/white"
						android:layout_marginEnd="6dp"/>

					<ImageButton
						android:id="@+id/btn_more"
						android:layout_width="38dp"
						android:layout_height="38dp"
						android:padding="7dp"
						android:src="@drawable/ic_book_open"
						android:background="@drawable/shape_circle"
						android:backgroundTint="@color/bg_button_opacity"
						app:tint="@color/white"/>

				</LinearLayout>

			</LinearLayout>

			<LinearLayout
				android:id="@+id/text_greeting"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="14dp"
				android:orientation="vertical"
				android:padding="16dp"
				app:layout_constraintBottom_toBottomOf="@+id/hero_quality_detection">

				<TextView
					style="@style/Heading5"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/quality_greeting"
					android:textColor="@android:color/white" />

				<TextView
					style="@style/TextBase_Regular"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/quality_greeting_under"
					android:textColor="@color/primary200" />

			</LinearLayout>

			<LinearLayout
				android:id="@+id/rice_quality_heading"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:paddingHorizontal="16dp"
				android:paddingTop="14dp"
				android:paddingBottom="16dp"
				app:layout_constraintTop_toBottomOf="@+id/hero_quality_detection">

				<TextView
					style="@style/TextExtraLarge_SemiBold"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/rice_quality"
					android:layout_marginBottom="2dp"
					android:textColor="@color/textPrimary" />

				<TextView
					style="@style/TextExtraSmall_Regular"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/rice_quality_specific"
					android:textColor="@color/textSecondary" />

			</LinearLayout>

			<HorizontalScrollView
				android:id="@+id/rice_quality_type"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:scrollbars="none"
				app:layout_constraintTop_toBottomOf="@+id/rice_quality_heading">

				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:paddingHorizontal="16dp">

					<!-- Kualitas Premium -->
					<include
						android:id="@+id/premium_quality_type"
						layout="@layout/card_rice_quality"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginEnd="16dp" />

					<!-- Kualitas Medium I -->
					<include
						android:id="@+id/medium_I_quality_type"
						layout="@layout/card_rice_quality"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginEnd="16dp" />

					<!-- Kualitas Medium II -->
					<include
						android:id="@+id/medium_II_quality_type"
						layout="@layout/card_rice_quality"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginEnd="16dp" />

					<!-- Kualitas Bawah -->
					<include
						android:id="@+id/lower_quality_type"
						layout="@layout/card_rice_quality"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content" />

				</LinearLayout>

			</HorizontalScrollView>

			<LinearLayout
				android:id="@+id/rice_parameter_heading"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:layout_marginTop="8dp"
				android:padding="16dp"
				app:layout_constraintTop_toBottomOf="@+id/rice_quality_type">

				<TextView
					style="@style/TextExtraLarge_SemiBold"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/label_rice_parameter"
					android:layout_marginBottom="2dp"
					android:textColor="@color/textPrimary" />

				<TextView
					style="@style/TextExtraSmall_Regular"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/label_rice_parameter_under"
					android:textColor="@color/textSecondary" />

			</LinearLayout>

			<HorizontalScrollView
				android:id="@+id/rice_parameter_type"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:scrollbars="none"
				app:layout_constraintTop_toBottomOf="@+id/rice_parameter_heading">

				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:paddingHorizontal="16dp"
					android:layout_marginBottom="16dp">

					<!-- Butir Kapur -->
					<include
						android:id="@+id/butir_kapur"
						layout="@layout/card_rice_type"
						android:layout_width="234dp"
						android:layout_height="wrap_content"
						android:layout_marginEnd="16dp" />

					<!-- Butir Kepala -->
					<include
						android:id="@+id/butir_kepala"
						layout="@layout/card_rice_type"
						android:layout_width="234dp"
						android:layout_height="wrap_content"
						android:layout_marginEnd="16dp" />

					<!-- Butir Patah -->
					<include
						android:id="@+id/butir_patah"
						layout="@layout/card_rice_type"
						android:layout_width="234dp"
						android:layout_height="wrap_content"
						android:layout_marginEnd="16dp" />

					<!-- Butir Menir -->
					<include
						android:id="@+id/butir_menir"
						layout="@layout/card_rice_type"
						android:layout_width="234dp"
						android:layout_height="wrap_content"
						android:layout_marginEnd="16dp" />

					<!-- Butir Rusak -->
					<include
						android:id="@+id/butir_rusak"
						layout="@layout/card_rice_type"
						android:layout_width="234dp"
						android:layout_height="wrap_content"
						android:layout_marginEnd="16dp" />

				</LinearLayout>

			</HorizontalScrollView>

			<HorizontalScrollView
				android:id="@+id/rice_parameter_type_under"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:scrollbars="none"
				app:layout_constraintTop_toBottomOf="@+id/rice_parameter_type">

				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:paddingHorizontal="16dp"
					android:layout_marginBottom="16dp">

					<!-- Kutu -->
					<include
						android:id="@+id/kutu"
						layout="@layout/card_rice_type"
						android:layout_width="234dp"
						android:layout_height="wrap_content"
						android:layout_marginEnd="16dp" />

					<!-- Batu -->
					<include
						android:id="@+id/batu"
						layout="@layout/card_rice_type"
						android:layout_width="234dp"
						android:layout_height="wrap_content"
						android:layout_marginEnd="16dp" />

					<!--Sekam -->
					<include
						android:id="@+id/sekam"
						layout="@layout/card_rice_type"
						android:layout_width="234dp"
						android:layout_height="wrap_content"
						android:layout_marginEnd="16dp" />

					<!-- Butir Merah -->
					<include
						android:id="@+id/butir_merah"
						layout="@layout/card_rice_type"
						android:layout_width="234dp"
						android:layout_height="wrap_content"
						android:layout_marginEnd="16dp" />

					<!-- Butir Gabah -->
					<include
						android:id="@+id/butir_gabah"
						layout="@layout/card_rice_type"
						android:layout_width="234dp"
						android:layout_height="wrap_content"
						android:layout_marginEnd="16dp" />

				</LinearLayout>

			</HorizontalScrollView>

		</androidx.constraintlayout.widget.ConstraintLayout>

	</ScrollView>

		<com.google.android.material.floatingactionbutton.FloatingActionButton
			android:id="@+id/fab_camera"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:backgroundTint="@color/primary400"
			android:contentDescription="@string/hint_take_camera_detection"
			android:src="@drawable/ic_camera"
			android:layout_marginEnd="20dp"
			android:layout_marginBottom="20dp"
			app:borderWidth="0dp"
			app:elevation="0dp"
			app:fabCustomSize="56dp"
			app:maxImageSize="24dp"
			app:rippleColor="@color/primary600"
			app:tint="@color/white"
			app:shapeAppearance="?attr/shapeAppearanceOverlay"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>