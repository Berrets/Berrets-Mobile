<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/home_fragment"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".view.main.home.HomeFragment">

	<ImageView
		android:id="@+id/hero_scenery_time"
		android:layout_width="0dp"
		android:layout_height="300dp"
		android:contentDescription="@string/alt_hero_scenery"
		android:scaleType="centerCrop"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:srcCompat="@drawable/hero_scenery_morning" />

	<com.google.android.material.textview.MaterialTextView
		style="@style/HeadingGreeting"
		android:id="@+id/text_greeting"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="@android:color/transparent"
		android:text="@string/user_greeting"
		android:textColor="@android:color/white"
		app:layout_constraintBottom_toTopOf="@id/text_greeting_under"
		app:layout_constraintEnd_toEndOf="@id/hero_scenery_time"
		app:layout_constraintStart_toStartOf="@id/hero_scenery_time" />

	<com.google.android.material.textview.MaterialTextView
		android:id="@+id/text_greeting_under"
		style="@style/TextBase_Regular"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginBottom="28dp"
		android:padding="8dp"
		android:background="@android:color/transparent"
		android:text="@string/user_greeting_under"
		android:textColor="@android:color/white"
		app:layout_constraintBottom_toBottomOf="@id/hero_scenery_time"
		app:layout_constraintEnd_toEndOf="@id/hero_scenery_time"
		app:layout_constraintStart_toStartOf="@id/hero_scenery_time" />

	<com.google.android.material.textfield.TextInputLayout
		style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
		android:id="@+id/input_layout"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginHorizontal="32dp"
		app:boxBackgroundColor="@color/white"
		app:boxCornerRadiusBottomEnd="24dp"
		app:boxCornerRadiusBottomStart="24dp"
		app:boxCornerRadiusTopEnd="24dp"
		app:boxCornerRadiusTopStart="24dp"
		app:startIconDrawable="@drawable/ic_search"
		app:boxStrokeWidth="0dp"
		app:hintEnabled="false"
		app:startIconTint="@color/primary600"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/text_greeting_under">

		<com.google.android.material.textfield.TextInputEditText
			android:id="@+id/input_search"
			android:hint="@string/hint_search"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:inputType="text"
			android:textColor="@color/textPrimary" />

	</com.google.android.material.textfield.TextInputLayout>

	<RelativeLayout
		android:id="@+id/functions_layout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="20dp"
		android:gravity="center"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/input_layout">

		<include
			android:id="@+id/clickable_recommendation"
			layout="@layout/clickable_hero_with_label"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentStart="true"
			android:layout_centerVertical="true" />

		<include
			android:id="@+id/clickable_detection"
			layout="@layout/clickable_hero_with_label"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_toEndOf="@id/clickable_recommendation"
			android:layout_marginStart="16dp"
			android:layout_centerVertical="true" />

		<include
			android:id="@+id/clickable_pricing"
			layout="@layout/clickable_hero_with_label"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_toEndOf="@id/clickable_detection"
			android:layout_marginStart="16dp"
			android:layout_centerVertical="true" />

		<include
			android:id="@+id/clickable_others"
			layout="@layout/clickable_hero_with_label"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_toEndOf="@id/clickable_pricing"
			android:layout_marginStart="16dp"
			android:layout_centerVertical="true" />

	</RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>