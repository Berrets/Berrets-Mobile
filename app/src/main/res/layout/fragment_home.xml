<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/home_fragment"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/backgroundSecondary"
	tools:context=".view.main.home.HomeFragment">

	<ImageView
		android:id="@+id/hero_scenery_time"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:adjustViewBounds="true"
		android:contentDescription="@string/alt_hero_scenery"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:srcCompat="@drawable/hero_scenery_morning" />

	<EditText
		android:id="@+id/et_search"
		style="@style/EditTextStyle"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="-22dp"
		android:inputType="text"
		android:hint="Telusuri Berrets disini..."
		android:drawableStart="@drawable/ic_search"
		android:drawableTint="@color/primary400"
		android:backgroundTint="@color/backgroundPrimary"
		android:layout_marginHorizontal="16dp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/hero_scenery_time" />

	<TextView
		android:id="@+id/text_subgreeting"
		style="@style/TextBase_Regular"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginHorizontal="16dp"
		android:text="Yuk majukan pertanian bersama kami!"
		android:textColor="@color/primary200"
		android:textAlignment="center"
		android:layout_marginBottom="16dp"
		app:layout_constraintBottom_toTopOf="@+id/et_search" />

	<TextView
		android:id="@+id/text_greeting"
		style="@style/Heading5"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginHorizontal="16dp"
		android:text="@string/user_greeting"
		android:textColor="@color/white"
		android:textAlignment="center"
		app:layout_constraintBottom_toTopOf="@+id/text_subgreeting" />

	<LinearLayout
		android:id="@+id/linearLayout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="10dp"
		android:gravity="center"
		android:orientation="horizontal"
		app:layout_constraintTop_toBottomOf="@+id/et_search">

		<LinearLayout
			android:id="@+id/recommendation"
			android:layout_width="80dp"
			android:layout_height="120dp"
			android:layout_marginHorizontal="6dp"
			android:gravity="center|bottom"
			android:orientation="vertical">

			<ImageView
				android:layout_width="60dp"
				android:layout_height="wrap_content"
				android:adjustViewBounds="true"
				android:contentDescription="@null"
				android:src="@drawable/hero_recommendation" />

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="10dp"
				android:fontFamily="@font/manrope_medium"
				android:textAlignment="center"
				android:textColor="@color/textPrimary"
				android:textSize="10sp"
				android:text="@string/label_recommendation" />

		</LinearLayout>

		<LinearLayout
			android:id="@+id/detection"
			android:layout_width="80dp"
			android:layout_height="120dp"
			android:layout_marginHorizontal="6dp"
			android:gravity="center|bottom"
			android:orientation="vertical">

			<ImageView
				android:layout_width="60dp"
				android:layout_height="wrap_content"
				android:adjustViewBounds="true"
				android:contentDescription="@null"
				android:src="@drawable/hero_detection" />

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="10dp"
				android:fontFamily="@font/manrope_medium"
				android:textAlignment="center"
				android:textColor="@color/textPrimary"
				android:textSize="10sp"
				android:text="@string/label_detection" />

		</LinearLayout>

		<LinearLayout
			android:id="@+id/pricing"
			android:layout_width="80dp"
			android:layout_height="120dp"
			android:layout_marginHorizontal="6dp"
			android:gravity="center|bottom"
			android:orientation="vertical">

			<ImageView
				android:layout_width="60dp"
				android:layout_height="wrap_content"
				android:adjustViewBounds="true"
				android:contentDescription="@null"
				android:src="@drawable/hero_pricing" />

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="10dp"
				android:fontFamily="@font/manrope_medium"
				android:textAlignment="center"
				android:textColor="@color/textPrimary"
				android:textSize="10sp"
				android:text="@string/label_pricing" />

		</LinearLayout>

		<LinearLayout
			android:id="@+id/others"
			android:layout_width="80dp"
			android:layout_height="120dp"
			android:layout_marginHorizontal="6dp"
			android:gravity="center|bottom"
			android:orientation="vertical">

			<ImageView
				android:layout_width="60dp"
				android:layout_height="wrap_content"
				android:adjustViewBounds="true"
				android:contentDescription="@null"
				android:src="@drawable/hero_others" />

			<TextView
				android:layout_width="match_parent"
				android:layout_height="28dp"
				android:layout_marginTop="10dp"
				android:fontFamily="@font/manrope_medium"
				android:gravity="center"
				android:textAlignment="center"
				android:textColor="@color/textPrimary"
				android:textSize="10sp"
				android:text="@string/label_others" />

		</LinearLayout>

	</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>